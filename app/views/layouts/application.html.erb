<!DOCTYPE html>
<html>
  <head>
    <title>HABITRA</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.0.8/css/all.css" rel="stylesheet">

  </head>

  <body>

    <div class="header">

      <div class="header-left">

        <%= link_to "HABITRA", "/home",class:" text-header bg-transparent" %>

      </div>

      <div class="header-right">
        <%= link_to "投稿一覧", tweets_path,class:" text-header bg-transparent" %>
        <%= link_to "HABITANT一覧", users_path,class:" text-header bg-transparent" %>
        <%# 修正前 %>
        <%#= link_to "HABITANT一覧", users_index_path %>
        <% if user_signed_in? %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete,class:" text-header bg-transparent" %>
        <% else %>
          <%= link_to "新規登録", new_user_registration_path,class:" text-header bg-transparent" %>
          <%= link_to "ログイン", new_user_session_path,class:" text-header bg-transparent" %>
        <% end %>
      </div>
    </div>
    <div class="app-header">
      <%= yield %>
    </div>

  </body>
</html>
